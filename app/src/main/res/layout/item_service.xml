<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view_service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Service Name" />

    <TextView
        android:id="@+id/text_view_service_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: $0.00" />

    <!-- Edit and Delete buttons -->
    <ImageButton
        android:id="@+id/button_edit_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:contentDescription="@string/edit_service"/>

    <ImageButton
        android:id="@+id/button_delete_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/delete_service"/>

</LinearLayout>
